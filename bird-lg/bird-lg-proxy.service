[Unit]
Description=Bird-lg-go Proxy
After=network.target bird.service

[Service]
Type=simple
User=bird
Group=bird
ExecStart=/usr/local/bin/bird-lg-proxy \
    --allowed 127.0.0.1 \
    --bird /run/bird/bird.ctl \
    --listen 127.0.0.1:8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
